@model IEnumerable<Aluno>

@{
    ViewData["Title"] = "Alunos";
}

<div class="container p-3">
    <h1 class="h3 mb-2 text-primary">Alunos</h1>
    <p class="mb-4 text-light">Este local serve para verificar informações e adicionar notas ao seus alunos!</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-6">
                    <h5 class="m-0 font-weight-bold text-primary">Lista de Alunos</h5>
                </div>
            </div> 
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-light" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="col-1 text-primary text-center">#</th>
                            <th>Nome</th>
                            <th class="col-3 text-center"><i class="bi bi-eye"></i></th>
                            <th class="col-3 text-center"><i class="bi bi-plus-circle"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var aluno in Model)
                        {
                            <tr>
                                <td class="text-center text-primary">@aluno.Id</td>
                                <td>@aluno.Nome @aluno.Sobrenome</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-success"><i class="bi bi-eye"></i>  Visualizar Notas </button>
                                </td>
                                <td class="text-center text-success">
                                    <a class="btn btn-sm btn-primary" asp-controller="Home" asp-action="AddNotas" asp-route-id="@aluno.Id">
                                        <i class="bi bi-plus-circle"></i> Adicionar Notas
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
