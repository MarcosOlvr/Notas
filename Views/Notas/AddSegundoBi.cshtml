@model AddNotasVM

@{
    ViewData["Title"] = "Segundo Bimestre";
}

<div class="container p-3">
    <a asp-controller="Home" asp-action="AddNotas" asp-route-id="@Model.Aluno.Id">
        <i class="bi bi-arrow-left-circle text-primary" style="font-size: 2rem;"></i>
    </a>

    <h1 class="h3 mb-2 text-primary">Segundo Bimestre</h1>
    <p class="mb-4 text-light">Aqui você pode adicionar as notas do <strong>Segundo Bimestre</strong> do seu aluno!</p>

    <h2 class="text-light text-center">Aluno: @Model.Aluno.Nome @Model.Aluno.Sobrenome</h2>
  
    <div class="row mt-3 d-flex justify-content-between">
        <form method="post">
            <input asp-for="Aluno" hidden/>
            <div class="col-md-auto mt-3 p-3 border rounded border-2 border-primary">
                <h4 class="text-primary text-center">Português</h4>
                <input asp-for="Portugues" class="form-control" min="0" max="100"/>
            </div>
            <div class="col-md-auto mt-3 p-3 border rounded border-2 border-primary">
                <h4 class="text-primary text-center">Matemática</h4>
                <input asp-for="Matematica" class="form-control" min="0" max="100"/>
            </div>
            <div class="col-md-auto mt-3 p-3 border rounded border-2 border-primary">
                <h4 class="text-primary text-center">História</h4>
                <input asp-for="Historia" class="form-control" min="0" max="100"/>
            </div>
            <div class="col-md-auto mt-3 p-3 border rounded border-2 border-primary">
                <h4 class="text-primary text-center">Geografia</h4>
                <input asp-for="Geografia" class="form-control" min="0" max="100"/>
            </div>
            <div class="col-md-auto mt-3 p-3 border rounded border-2 border-primary">
                <h4 class="text-primary text-center">Ciências</h4>
                <input asp-for="Ciencias" class="form-control" min="0" max="100"/>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success form-control p-3">Enviar</button>
            </div>
        </form>
    </div>
</div>